generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider = "sqlite"
	url      = env("DATABASE_URL")
}

model User {
	discordUserId   String   @id @unique
	isAdmin         Boolean  @default(false)
	Coins           Int      @default(0)
	RobloxUsername  String   @default("REM_UNDEFINED_USERNAME")
	isAnonymous     Boolean  @default(false)
	atprotoDid      String   @unique
	atprotoHandle   String   @unique
}

model PrikolsHubServiceBan {
	discordUserId  String  @id @unique
	reason         String
	moderatorId    String              // discord userid of the moderator
}

model FeatureFlag {
	name   String   @id @unique
	state  Boolean
}